{
  "version": 2,
  "buildCommand": "pnpm build",
  "builds": [
    {
      "src": "api/build/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["api/build/**"] }
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static",
      "config": {
        "includeFiles": "frontend/dist/**,frontend/dist/index.html,frontend/dist/assets/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/build/index.js"
    },
    {
      "src": "/",
      "dest": "frontend/dist/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/dist/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "frontend/dist/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "frontend/dist/manifest.json"
    }
  ]
}

